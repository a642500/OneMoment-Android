<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:elevation="@dimen/toolbar_elevation"
            app:contentInsetStart="72dp">
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <co.yishun.onemoment.app.ui.view.RoundRectImageView
            android:id="@+id/avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginRight="24dp"
            app:round_rate="1"
            android:src="@drawable/pic_profile_tmp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/usernameTextView"
            android:layout_toRightOf="@id/avatar"
            android:layout_toEndOf="@id/avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JoKercHOw"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <co.yishun.onemoment.app.ui.view.SquareFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <co.yishun.library.OnemomentPlayerView
            android:id="@+id/videoPlayView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </co.yishun.library.OnemomentPlayerView>

    </co.yishun.onemoment.app.ui.view.SquareFrameLayout>

    <TextView
        android:id="@+id/voteCountTextView"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/bg_vote_up"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_like_video"
        android:drawableStart="@drawable/ic_like_video"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:drawablePadding="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:text="32"
        android:layout_gravity="center_horizontal"/>


</LinearLayout>