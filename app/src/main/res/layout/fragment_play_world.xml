<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

    </RelativeLayout>

    <co.yishun.onemoment.app.ui.view.SquareFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <co.yishun.library.OnemomentPlayerView
            android:id="@+id/videoPlayView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </co.yishun.library.OnemomentPlayerView>

    </co.yishun.onemoment.app.ui.view.SquareFrameLayout>



    <TextView
        android:id="@+id/voteCountTextView"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/bg_vote_up"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_like_video"
        android:drawableStart="@drawable/ic_like_video"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:drawablePadding="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
        android:text="32"
        android:layout_gravity="center_horizontal"/>


</LinearLayout>