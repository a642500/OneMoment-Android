<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:app="http://schemas.android.com/apk/res-auto"
    app:duration="800">
    <changeBounds
        app:duration="500"
        app:interpolator="@android:interpolator/decelerate_quad">
        <targets>
            <target app:targetId="@id/videoImageView" />
            <target app:targetId="@id/collapsingToolbarLayout" />
            <target app:targetId="@id/appBar" />
            <target app:targetId="@id/videoFrame" />
        </targets>
    </changeBounds>

    <changeImageTransform
        app:duration="500"
        app:interpolator="@android:interpolator/decelerate_quad">
        <targets>
            <target app:targetId="@id/videoImageView" />
        </targets>
    </changeImageTransform>

    <fade
        app:duration="500"
        app:interpolator="@android:interpolator/decelerate_quad">
        <targets>
            <target app:targetId="@id/recyclerView" />
            <target app:targetId="@id/toolbar" />
            <target app:targetId="@id/addImageView" />
            <target app:targetId="@id/videoMask" />
            <target app:targetId="@id/collapsingToolbarLayout" />
        </targets>
    </fade>

    <transition class="co.yishun.onemoment.app.ui.view.CornerTransition">
        <targets>
            <target app:targetId="@id/videoImageView" />
        </targets>
    </transition>
</transitionSet>