<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="co.yishun.onemoment.app"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <uses-sdk tools:overrideLibrary="com.github.hiteshsondhi88.libffmpeg"/>

    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name=".ui.SplashActivity_"
            android:theme="@style/AppTheme.SplashActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity_"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.MainActivity"
            />
        <activity
            android:name=".ui.VideoVotedUpActivity_"
            android:label="@string/discovery_title"
            android:theme="@style/AppTheme.Dragger"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity"
                />
        </activity>
        <activity
            android:name=".ui.SettingsActivity_"
            android:label="@string/title_settings"
            android:theme="@style/AppTheme.Settings"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity"
                />
        </activity>

        <activity
            android:name=".ui.LoginActivity_"
            android:theme="@style/AppTheme.LoginActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.PhoneAccountActivity_"
            android:theme="@style/AppTheme.PhoneAccountActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.LoginActivity_"
                />
            <!-- TODO just for test-->
        </activity>

        <activity
            android:name="com.soundcloud.android.crop.CropImageActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.CropActivity"/>

        <activity
            android:name=".ui.EspressoTestActivity"
            android:label="@string/title_activity_espresso_test"
            />
        <activity android:name=".ui.UIAutomatorTestActivity"/>
    </application>

</manifest>
